<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>Org.Qedge</groupId>
  <artifactId>Ferrari</artifactId>
  <packaging>war</packaging>
  <version>0.0.15</version>
  <name>Ferrari Maven Webapp</name>
  <url>http://maven.apache.org</url>
  <scm>
		<connection>scm:git:git@github.com:SivaDev/Ferrari.git</connection>
		<url>scm:git:git@github.com:SivaDev/Ferrari.git</url>
		<developerConnection>scm:git:git@github.com:SivaDev/Ferrari.git</developerConnection>
		<tag>Ferrari-0.0.15</tag>
  </scm>
  <distributionManagement>
		<!-- Publish the versioned releases here -->
		<repository>
			<id>qedgenexus</id>
			<name>Ferrari</name>
			<url>http://localhost:8081/nexus/content/repositories/releases</url>
		</repository>

		<!-- Publish the versioned releases here -->
		<snapshotRepository>
			<id>qedgenexus</id>
			<name>Ferrari</name>
			<url>http://localhost:8081/nexus/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>
  
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
		<finalName>Ferrari</finalName>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-release-plugin</artifactId>
					<version>2.5.2</version>
					<executions>
						<execution>
							<id>default</id>
							<goals>
								<goal>perform</goal>
							</goals>
							<configuration>
								<pomFileName>${project.name}/pom.xml</pomFileName>
							</configuration>
						</execution>
					</executions>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
